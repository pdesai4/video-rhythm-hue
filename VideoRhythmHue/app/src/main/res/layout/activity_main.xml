<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#212121"
              android:orientation="vertical"
              tools:context="com.example.priyankadesai.videorhythmhue.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:gravity="center"
        android:text="@string/video_rhythm_hue"
        android:textColor="#F48FB1"
        android:textSize="72sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calibrateIntensityButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0.09"
            android:background="#757575"
            android:text="@string/calibrate_intensity"
            android:textColor="#EEFF41"/>

        <Button
            android:id="@+id/videoPlayerButton"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0.09"
            android:background="#757575"
            android:text="@string/video_player"
            android:textColor="#EEFF41"/>
    </LinearLayout>

    <Button
        android:id="@+id/philipAppButton"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:background="#757575"
        android:text="@string/philips_hue_app"
        android:textColor="#EEFF41"/>
</LinearLayout>
